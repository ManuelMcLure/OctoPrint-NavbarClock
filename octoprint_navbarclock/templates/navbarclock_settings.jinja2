<form class="form-horizontal">
  <div class="control-group">
    <label class="control-label">Time Zone</label>
    <div class="controls">
      <select data-bind="value: settings.timeZone">
        <option value="server">Server</option>
        <option value="browser">Browser</option>
        <option value="utc">UTC (aka GMT)</option>
      </select>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
        <input type="checkbox" data-bind="checked: settings.showSeconds">Display Seconds
      </label>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
        <input type="checkbox" data-bind="checked: settings.format24h">24 Hour Format
      </label>
    </div>
  </div>
  <div class="control-group" data-bind="visible: !settings.format24h()">
    <div class="controls">
      <label class="checkbox">
        <input type="checkbox" data-bind="checked: settings.showampm">Display AM/PM
      </label>
    </div>
  </div>
</form>
